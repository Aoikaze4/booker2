<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User Info</h2>
      <%= render partial: 'layouts/validation', locals: { model: @user } %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, class:"form-control user_name" %>
        </div>
        <div class="form-group">
          <label>Image</label>
          <%= f.attachment_field :profile_image, class:"form-control-file user_profile_image" %>
        </div>
        <div class="form-group">
          <label>Introduction</label>
          <%= f.text_area :introduction, class:"form-control user_introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>