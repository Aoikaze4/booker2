<h2>User Info</h2>
<%= attachment_image_tag user, :profile_image, size:"100x100", fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to edit_user_path(user.id) do %>
  <div class="row">
    <button class="btn btn-outline-secondary btn-block">
      <i class="fas fa-user-cog"></i>
    </button>
  </div>
<% end %>


<h2 class="mt-3">New book</h2>
<%= form_with model:book, local:true do |f| %>
<div class="form-group">
  <label>Title</label>
  <%= f.text_field :title, value: nil, class:"form-control book_title" %>
</div>
<div class="form-group">
  <label>Opinion</label>
  <%= f.text_area :body, value: nil, class:"form-control book_body" %>
</div>
<div class="form-group">
  <%= f.submit 'Create Book', method: :post, class:"btn btn-success" %>
</div>
<% end %>