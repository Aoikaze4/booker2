<%= render partial: 'layouts/validation', locals: { model: @user, model: @book } %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'layouts/sidebar', locals: { book: @book, user: @user } %>
    </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |f| %>
          <% @user_image = User.find_by(id: f.user_id) %>
            <tr>
              <td>
                <%= link_to user_path(f.user_id) do %>
                <%= attachment_image_tag @user_image, :profile_image, size: "50x50", fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to f.title, book_path(f.id) %>
              </td>
              <td>
                <%= f.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>